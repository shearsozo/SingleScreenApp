<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundtrimmed" />
    <!--I designed the image in Adobe Photoshop-->

    <ImageView
        android:id="@+id/brain"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/brain2" />
    <!--"https://kor.pngtree.com/freepng/digital-brain_3043223.html", "5/1/18"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/udacitylogo" />
        <!--"https://blog.udacity.com/2018/03/building-app-save-lives.html", "5/1/18"-->

        <TextView
            android:id="@+id/beindemand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="75dp"
            android:layout_weight="2"
            android:fontFamily="sans-serif-light"
            android:text="@string/slogan"
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="75dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="@string/description"
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/udacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:autoLink="web"
            android:fontFamily="sans-serif-light"
            android:text="@string/website"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:text="@string/address"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/phone"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>
